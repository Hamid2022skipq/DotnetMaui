<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Maui.MVVM.Views.EditContactPage"
             xmlns:controls="clr-namespace:Contacts.Maui.MVVM.Views.Controls"
             Title="Edit Contact"
             Shell.BackgroundColor="LightSeaGreen"
             >
    <Shell.TitleView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <Label Text="Edit Contact" VerticalTextAlignment="Center" FontSize="Title" TextColor="White" HorizontalOptions="StartAndExpand" />
        </StackLayout>
    </Shell.TitleView>
    <controls:ContactControl x:Name="contactCtrl" OnSave="BtnUpdateEditContact_Clicked" 
                             OnCancle="BtnCancelEditContact_Clicked"></controls:ContactControl>
</ContentPage>