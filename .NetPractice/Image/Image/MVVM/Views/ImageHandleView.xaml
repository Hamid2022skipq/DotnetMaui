<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Image.MVVM.Views.ImageHandleView"
             Title="ImageHandleView">
    <StackLayout>
        <Button Text="Upload Image" Command="{Binding PickImageAsyncCommand}" />
        <Image Source="{Binding ImagePicked}" Aspect="AspectFill" HeightRequest="200" WidthRequest="200"/>
    </StackLayout>
</ContentPage>